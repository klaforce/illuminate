{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "command": "dotnet build",
        "type": "shell",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always"
        }
    }, {
        "label": "test",
        "command": "dotnet test",
        "type": "shell",
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always"
        }
    }, {
        "label": "test",
        "command": "dotnet test",
        "type": "shell",
        "group": {
            "kind": "test",
            "isDefault": true
        },
        "presentation": {
            "reveal": "always"
        },
        "problemMatcher": "$msCompile",
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "/d",
                    "/c"
                ]
            }
        }
    }, {
        "label": "run",
        "command": "dotnet run --project illuminate.console -- ./meta/scenes/main.json",
        "type": "shell",
        "presentation": {
            "reveal": "always"
        }
    }]
}